<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spots cercanos"
        android:textSize="30dp"
        android:textAlignment="center"
        >
    </TextView>
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2km de distancia"
                    android:textAlignment="center">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/spot1"
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="40dp"

                        android:layout_marginBottom="15dp"
                        android:background="@drawable/fs1" />

                    <Button
                        android:id="@+id/spot2"
                        android:layout_width="150dp"
                        android:layout_height="70dp"

                        android:layout_marginLeft="25dp"
                        android:background="@drawable/fs2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/spot3"
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="40dp"

                        android:layout_marginBottom="15dp"
                        android:background="@drawable/fs3" />

                    <Button
                        android:id="@+id/spot4"
                        android:layout_width="150dp"
                        android:layout_height="70dp"

                        android:layout_marginLeft="25dp"
                        android:background="@drawable/fs4" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5km de distancia"
                    android:textAlignment="center">

                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="40dp"

                        android:layout_marginBottom="15dp"
                        android:background="@drawable/fs5" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="70dp"

                        android:layout_marginLeft="25dp"
                        android:background="@drawable/fs6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="40dp"

                        android:layout_marginBottom="15dp"
                        android:background="@drawable/fs7" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="70dp"

                        android:layout_marginLeft="25dp"
                        android:background="@drawable/fs8"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10km de distancia"
                    android:textAlignment="center">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="40dp"

                        android:layout_marginBottom="15dp"
                        android:background="@drawable/fs9"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="70dp"

                        android:layout_marginLeft="25dp"
                        android:background="@drawable/fs10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="40dp"

                        android:layout_marginBottom="15dp"
                        android:background="@drawable/fs4"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="70dp"

                        android:layout_marginLeft="25dp"
                        android:background="@drawable/fs2"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
