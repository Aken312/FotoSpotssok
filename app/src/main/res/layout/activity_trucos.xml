<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Aprender Trucos"
    android:textSize="30dp"
    android:textAlignment="center"
    >
</TextView>
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nivel Facil"
            android:textAlignment="center">

        </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/truco1"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"

                    android:layout_marginBottom="15dp"
                    android:background="@drawable/tricks1" />

                <Button
                    android:id="@+id/truco2"
                    android:layout_width="150dp"
                    android:layout_height="70dp"

                    android:layout_marginLeft="25dp"
                    android:background="@drawable/tricks2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/truco3"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"

                    android:layout_marginBottom="15dp"
                    android:background="@drawable/tricks3" />

                <Button
                    android:id="@+id/truco4"
                    android:layout_width="150dp"
                    android:layout_height="70dp"

                    android:layout_marginLeft="25dp"
                    android:background="@drawable/tricks4" />
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nivel Intermedio"
            android:textAlignment="center">

        </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"

                    android:layout_marginBottom="15dp"
                    android:background="@drawable/tricks5" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"

                    android:layout_marginLeft="25dp"
                    android:background="@drawable/tricks6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"

                    android:layout_marginBottom="15dp"
                    android:background="@drawable/tricks7" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"

                    android:layout_marginLeft="25dp"
                    android:background="@drawable/tricks8" />
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nivel Experimentado"
            android:textAlignment="center">

        </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"

                    android:layout_marginBottom="15dp"
                    android:background="@drawable/tricks5" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"

                    android:layout_marginLeft="25dp"
                    android:background="@drawable/tricks1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"

                    android:layout_marginBottom="15dp"
                    android:background="@drawable/tricks4" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="70dp"

                    android:layout_marginLeft="25dp"
                    android:background="@drawable/tricks7" />
            </LinearLayout>


    </LinearLayout>
   </RelativeLayout>
    </ScrollView>
</LinearLayout>
